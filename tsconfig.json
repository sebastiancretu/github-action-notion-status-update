{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "lib": ["es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/**/*.d.ts",
      "./src/types/*.d.ts"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ]
}
